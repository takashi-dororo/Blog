<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力箇所に <%= pluralize(object.errors.count, "error") %>あります.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
