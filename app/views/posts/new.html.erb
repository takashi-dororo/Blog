<div class="row">
  <div class="col-md-6 contribute">
    <%= form_for @post, url: posts_path(@post), html: { method: :post } do |f| %>

      <%= f.label "タイトル" %>
      <%= f.text_field :title, class: 'form-control' %>

      <div class="contribute-box">
        <%= f.label "記事" %>
        <%= f.text_area :content %>
      </div>

      <div class="contribute-btn">
        <input type="submit" value="投稿する" class="btn btn-outline-primary">
      </div>
    <% end %>
  </div>
</div>
