<h1>パスワード忘れた場合</h1>

<div class="row">
  <div class="col-md-6 form-box">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <div class="under-btn">
        <input type="submit" value="メールを送る" class="btn btn-outline-primary btn-sm">
      </div>
    <% end %>
  </div>
</div>
