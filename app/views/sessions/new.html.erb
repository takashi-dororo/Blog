<div class="container-box center row">
  <div class="container-box-content col-md-6 col-md-offset-3">
    <!-- セッションの場合はリソースの名前と対応するurlを具体的に指定する必要あり -->
    <%= form_for(:session, url: login_path) do |f| %>
      <h2>ログイン</h2>

      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>パスワードを保存する</span>
      <% end %>

      <div class="content-btn">
        <input type="submit" value="ログイン" class="btn btn-outline-primary btn-sm">
      </div>
    <% end %>
    <p>初めての方はこちら、下のボタンから登録してください</p>
    <p><%= link_to "新規登録", new_user_path %></p>
  </div>
</div>
